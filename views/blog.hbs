	<div class='container'>
		<div class='row'>
			<div class='col-md-12'>
				{{#if post}}
					<h1>{{post.title}}</h1>
					<img
						src='{{post.featureImage}}'
						alt='feature Image'
						style='width:100%'
					/>
					<br /><br />
					{{#safeHTML post.body}}{{/safeHTML}}
					<br /><br />
					<strong>Category:</strong>
