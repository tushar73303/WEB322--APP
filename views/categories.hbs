<h1 class="m-5 text-center ">
    Categories
</h1>
{{#if categories}}

	<table class='table'>
		<thead>
			<th class='text-center'>
				Category Id
			</th>
			<th>
				Category Name
			</th>
			<th>
				Delete
			</th>
		</thead>
		{{#each categories}}
			<tr>
				<td scope='row' class='text-center'>
					<a href='/posts?category={{id}}'>{{id}}</a>
				</td>
				<td>
					{{category}}
				</td>
				<td>
					<form action="/categories/delete/{{id}}" method="get">
					
						<input type="submit" class="btn btn-danger" value="Delete">
					</form>
				</td>
			</tr>
		{{/each}}
	</table>

{{else}}
	<div class='alert alert-danger' role='alert'>
		No categories found.
	</div>
{{/if}}

<div class="d-flex justify-content-center">
	<a href="/categories/add" class="btn btn-primary">Add Category</a>
</div>